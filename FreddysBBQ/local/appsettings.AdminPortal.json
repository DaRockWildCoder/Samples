{
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information",
      "Steeltoe": "Debug"
    }
  },
  "Security": {
    "Oauth2": {
      "Client": {
        "ClientId": "admin-portal",
        "ClientSecret": "adminportal_secret",
        "AuthorizationEndpoint": "http://localhost:8080/uaa/oauth/authorize",
        "TokenEndpoint": "http://localhost:8080/uaa/oauth/token",
        "UserInformationEndpoint": "http://localhost:8080/uaa/userinfo",
        "TokenInfoUrl": "http://localhost:8080/uaa/check_token",
        "SaveTokens": true,
        "ValidateCertificates": false
      }
    }
  },
  "ServiceUrl": {
    "MenuServiceUrl": "http://menu-service/menuItems/{id}",
    "OrderServiceUrl": "http://localhost:63758/api/order"
  }
}
