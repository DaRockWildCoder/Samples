{
  "$schema": "https://steeltoe.io/schema/latest/schema.json",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "Steeltoe": "Debug"
    }
  },
  "Spring": {
    "Application": {
      "Name": "admin-portal"
    },
    "Cloud": {
      "Config": {
        "uri": "http://localhost:8888",
        "ValidateCertificates": false
      }
    }
  },
  "Eureka": {
    "Client": {
      "ValidateCertificates": false
    },
    "Instance": {
      "port": 8761
    }
  },
  "MySql": {
    "Client": {
      "Server": "localhost"
    }
  },
  "Security": {
    "Oauth2": {
      "Client": {
        // "additionalScopes": "menu.read menu.write order.admin order.me",
        "additionalScopes": "orders.read",
        "authDomain": "http://localhost:8080/uaa",
        "clientId": "adminportal",
        "clientSecret": "adminportal_secret",
        "saveTokens": true,
        "ValidateCertificates": false
      }
    }
  },
  "Branding": {
    "RestaurantName": "Freddy's BBQ Joint",
    "MenuTitle": "Freddy's Menu"
  }
}


